@model IEnumerable<Movies>
@{
    ViewData["Title"] = "TMDB";
}

<!-- Product Section Begin -->
<div class="mt-5 container">
    <div class="col-lg-8 col-md-8 col-sm-8">
        <div class="section-title"><h4>Popular Movies</h4></div>
    </div>
    <main role="main" class="pb-3">
        <div class="row row-cols-1 row-cols-md-5 g-3">
            @foreach (var item in Model)
            {
                var imageUrl = "https://image.tmdb.org/t/p/original" + item.poster_path;

                <div class="product__item">
                    <div class="product__item__pic set-bg" data-setbg="@imageUrl">
                        @*<div class="ep">18 / 18</div>
                    <div class="comment"><i class="fa fa-comments"></i> 11</div>
                    <div class="view"><i class="fa fa-eye"></i> 9141</div>*@
                    </div>
                    <div class="product__item__text">
                        @*<ul>
                    <li>Active</li>
                    <li>Movie</li>
                    </ul>*@
                        <h5><a asp-controller="Home" asp-action="Details" asp-route-Id="@item.id">@item.title</a></h5>
                    </div>
                </div>
            }
        </div>
    </main>
</div>
<!-- Product Section End -->